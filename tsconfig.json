{
  "compilerOptions": {
    "target": "ES2019",
    "module": "ESNext",
    "moduleResolution": "Node",
    "outDir": "lib",
    "rootDir": "src",
    "declaration": true,
    "emitDeclarationOnly": false,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "strict": true,
    "types": ["node"]
  },
  "include": ["src/**/*"]
}
